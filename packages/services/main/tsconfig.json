{
  "extends": "../../../tsconfig.base.json",
  "files": [],
  "include": [],
  "references": [
    {
      "path": "../../libs/shared-services"
    },
    {
      "path": "../../libs/shared-models"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES6",
    "module": "NodeNext",
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strictPropertyInitialization": false,
    "types": ["node", "webrtc"],
    "baseUrl": "./", // Base directory for resolving non-relative paths
    "paths": {
      "@in-one/shared-services": ["../../libs/shared-services/src/index.ts"],
      "@in-one/shared-models": ["../../libs/shared-models/src/index.ts"]
    }
  }
}
