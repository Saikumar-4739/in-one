{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "module": "NodeNext",
    "esModuleInterop": true,
    "rootDir": "../../",
    "paths": {
      "@in-one/shared-models": ["../shared-models/src/index.ts"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.ts"
  ],
  "references": [
    { "path": "../shared-models/tsconfig.lib.json" },
  ]
}