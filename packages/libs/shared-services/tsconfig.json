{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext", // Set this to match "moduleResolution": "NodeNext"
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "paths": {
      "@insights-365/shared-services": [
        "../../libs/shared-services/src/index.ts"
      ],
      "@in-one/shared-models": ["../../libs/shared-models/src/index.ts"]
    }
  },
  "files": [],
  "include": [
    "src/**/*.ts", // Adjust the pattern as necessary
    "src/index.ts" // Include specific entry points if needed
  ],
  "exclude": [
    "**/*.spec.ts", // Exclude spec files if not needed
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../shared-models"
    }
  ]
}
