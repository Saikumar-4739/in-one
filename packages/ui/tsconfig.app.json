{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "rootDir": "../../", // Set to the parent directory to include both 'ui' and 'libs'
    "module": "NodeNext",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ]
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "../libs/shared-models/src/**/*", // Include shared models
    // "../libs/shared-services/src/**/*" // Include shared services
  ],
  "references": [
    {
      "path": "../libs/shared-services/tsconfig.lib.json"
    },
    {
      "path": "../libs/shared-models/tsconfig.lib.json"
    }
  ]
}
