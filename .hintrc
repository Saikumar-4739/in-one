{
  "extends": [
    "development"
  ],
  "hints": {
    "typescript-config/consistent-casing": "off",
    "no-inline-styles": "off",
    "axe/name-role-value": [
      "default",
      {
        "button-name": "off"
      }
    ],
    "typescript-config/strict": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "backdrop-filter",
          "-webkit-text-size-adjust",
          "scrollbar-width",
          "scrollbar-width: none"
        ]
      }
    ],
    "typescript-config/is-valid": "off",
    "disown-opener": "off",
    "axe/forms": [
      "default",
      {
        "label": "off"
      }
    ]
  }
}